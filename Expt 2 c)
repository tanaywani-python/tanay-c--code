#include <iostream>
#include <string>
using namespace std;

class Staff {
    string name;
    string post;

public:
    void getData() {
        cout << "Enter staff name: ";
        cin >> name;
        cout << "Enter post: ";
        cin >> post;
    }

    void displayIfHOD() {
        if (post == "HOD" || post == "hod")
            cout << name << endl;
    }
};

int main() {
    Staff s[5];

    for (int i = 0; i < 5; i++) {
        cout << "\nEnter details of staff " << i + 1 << ":\n";
        s[i].getData();
    }

    cout << "\nStaff members who are HOD:\n";
    for (int i = 0; i < 5; i++) {
        s[i].displayIfHOD();
    }

    return 0;
}
