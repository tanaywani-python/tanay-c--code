#include <iostream>
using namespace std;

class Person {
public:
    string name;
    void get_name() {
        cout << "Enter name: ";
        cin >> name;
    }
};

class Student : public Person {
public:
    void display() { cout << "Student Name: " << name << endl; }
};

class Teacher : public Person {
public:
    void display() { cout << "Teacher Name: " << name << endl; }
};

int main() {
    Student s;
    Teacher t;
    s.get_name();
    t.get_name();

    s.display();
    t.display();
    return 0;
}
