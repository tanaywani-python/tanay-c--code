#include <iostream>
#include <string>
using namespace std;

class Book {
    string title, author;
    float price;

public:
    void getData() {
        cout << "Enter book title: ";
        getline(cin, title);
        cout << "Enter author name: ";
        getline(cin, author);
        cout << "Enter price: ";
        cin >> price;
    }

    void displayData() {
        cout << "\nBook Title: " << title;
        cout << "\nAuthor Name: " << author;
        cout << "\nPrice: " << price << endl;
    }
};

int main() {
    Book b, *ptr;
    ptr = &b;

    cin.ignore(); // if any buffer issue
    ptr->getData();
    ptr->displayData();

    return 0;
}
