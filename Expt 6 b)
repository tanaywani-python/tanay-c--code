#include <iostream>
using namespace std;

class Sports {
public:
    int score;
    void get_score() {
        cout << "Enter sports score: ";
        cin >> score;
    }
};

class Exam {
public:
    int marks;
    void get_marks() {
        cout << "Enter exam marks: ";
        cin >> marks;
    }
};

class Result : public Sports, public Exam {
public:
    void display() {
        cout << "\nTotal = " << marks + score << endl;
    }
};

int main() {
    Result r;
    r.get_marks();
    r.get_score();
    r.display();
    return 0;
}
