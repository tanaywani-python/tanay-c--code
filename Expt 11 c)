#include <iostream>
using namespace std;

template <class T>
class Vector {
    T arr[100];
    int size;
public:
    Vector(T a[], int s) {
        size = s;
        for (int i = 0; i < s; i++)
            arr[i] = a[i];
    }

    void display() {
        cout << "Vector: (";
        for (int i = 0; i < size; i++) {
            cout << arr[i];
            if (i != size - 1)
                cout << ",";
        }
        cout << ")" << endl;
    }
};

int main() {
    int a[] = {10, 20, 30, 40};
    Vector<int> v(a, 4);

    v.display();
    return 0;
}
