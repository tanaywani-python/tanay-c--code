#include <iostream>
#include <string>
using namespace std;

class ILogin {
protected:
    string name, password;
public:
    virtual void accept() {
        cout << "Enter name: ";
        cin >> name;
        cout << "Enter password: ";
        cin >> password;
    }
    virtual void display() {
        cout << "Name: " << name << "\nPassword: " << password << endl;
    }
};

class EmailLogin : public ILogin {
    string email;
public:
    void accept() override {
        cout << "\n--- Email Login ---\n";
        cout << "Enter email: ";
        cin >> email;
        ILogin::accept();
    }

    void display() override {
        cout << "\nEmail ID: " << email << endl;
        ILogin::display();
    }
};

class MembershipLogin : public ILogin {
    int memberID;
public:
    void accept() override {
        cout << "\n--- Membership Login ---\n";
        cout << "Enter member ID: ";
        cin >> memberID;
        ILogin::accept();
    }

    void display() override {
        cout << "\nMember ID: " << memberID << endl;
        ILogin::display();
    }
};

int main() {
    ILogin *ptr;

    EmailLogin e;
    MembershipLogin m;

    ptr = &e;
    ptr->accept();
    ptr->display();

    ptr = &m;
    ptr->accept();
    ptr->display();

    return 0;
}
